.size-options {
  display: flex;
  flex-wrap: wrap;
  margin: -$space-xs;
}

.size-option {
  margin: $space-xs;
  
  input[type="radio"] {
    position: absolute;
    opacity: 0;
    width: 0;
    height: 0;
    
    &:checked + .size-option__label {
      border-color: $color-primary;
      color: $color-primary;
    }
    
    &:disabled + .size-option__label {
      opacity: 0.5;
      cursor: not-allowed;
    }
  }
  
  &__label {
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 40px;
    height: 40px;
    padding: 0 $space-sm;
    border: 1px solid #ddd;
    border-radius: $border-radius-sm;
    font-size: $font-size-small;
    font-weight: 500;
    cursor: pointer;
    transition: $transition-base;
    
    &:hover {
      border-color: $color-primary;
    }
    
    &--sold-out {
      text-decoration: line-through;
    }
  }
}

.size-chart-button {
  display: inline-flex;
  align-items: center;
  margin-top: $space-sm;
  margin-left: $space-xs;
  background: none;
  border: none;
  font-size: $font-size-small;
  color: $color-primary;
  cursor: pointer;
  
  .icon-ruler {
    margin-right: $space-xs;
  }
  
  &:hover {
    text-decoration: underline;
  }
}

.quantity-input {
  display: flex;
  align-items: center;
  max-width: 120px;
  height: 46px;
  border: 1px solid #ddd;
  border-radius: $border-radius-md;
  overflow: hidden;
  
  &__button {
    width: 36px;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: none;
    border: none;
    color: $color-body-text;
    cursor: pointer;
    transition: $transition-base;
    
    &:hover {
      background-color: #f1f1f1;
    }
  }
  
  &__field {
    flex: 1;
    height: 100%;
    padding: 0;
    border: none;
    text-align: center;
    -moz-appearance: textfield;
    
    &::-webkit-outer-spin-button,
    &::-webkit-inner-spin-button {
      -webkit-appearance: none;
      margin: 0;
    }
    
    &:focus {
      outline: none;
    }
  }
}

.product__additional-info {
  margin-top: $space-xl;
  
  &-item {
    display: flex;
    align-items: flex-start;
    margin-bottom: $space-md;
    
    &:last-child {
      margin-bottom: 0;
    }
  }
  
  &-icon {
    margin-right: $space-sm;
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: $color-primary;
  }
  
  &-content {
    flex: 1;
  }
  
  &-title {
    margin: 0 0 $space-xs;
    font-size: $font-size-base;
    font-weight: 500;
  }
  
  p {
    margin: 0;
    font-size: $font-size-small;
    color: #777;
  }
}

.product__details {
  margin-top: $space-xl;
}

.product-tabs {
  &__nav {
    display: flex;
    margin-bottom: $space-md;
    border-bottom: 1px solid #ddd;
  }
  
  &__nav-item {
    padding: $space-sm $space-md;
    background: none;
    border: none;
    border-bottom: 2px solid transparent;
    font-weight: 500;
    color: #777;
    cursor: pointer;
    transition: $transition-base;
    
    &:hover {
      color: $color-primary;
    }
    
    &.is-active {
      color: $color-primary;
      border-bottom-color: $color-primary;
    }
  }
  
  &__tab-panel {
    &:not(.is-active) {
      display: none;
    }
  }
}

.product-details {
  &__table {
    width: 100%;
    border-collapse: collapse;
    
    th, td {
      padding: $space-sm;
      border-bottom: 1px solid #eee;
      text-align: left;
      vertical-align: top;
    }
    
    th {
      width: 150px;
      font-weight: 500;
    }
    
    tr:last-child {
      th, td {
        border-bottom: none;
      }
    }
  }
}

/* صفحة المجموعة */
.collection-layout {
  display: grid;
  grid-template-columns: 1fr;
  gap: $space-xl;
  
  @media (min-width: $breakpoint-lg) {
    grid-template-columns: 280px 1fr;
  }
}

.collection-sidebar {
  @media (max-width: $breakpoint-lg - 1px) {
    display: none;
    
    &.is-active {
      display: block;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      z-index: 1000;
      
      .collection-sidebar__inner {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        max-width: 320px;
        height: 100%;
        background-color: #fff;
        overflow-y: auto;
        transform: translateX(0);
      }
    }
  }
}

.collection-sidebar__inner {
  @media (max-width: $breakpoint-lg - 1px) {
    transform: translateX(-100%);
    transition: transform 0.3s ease;
  }
}

.collection-filters {
  &__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: $space-md;
    border-bottom: 1px solid #ddd;
    
    @media (min-width: $breakpoint-lg) {
      display: none;
    }
  }
  
  &__title {
    margin: 0;
    font-size: $font-size-base;
  }
  
  &__close {
    background: none;
    border: none;
    font-size: $font-size-large;
    color: $color-body-text;
    cursor: pointer;
    padding: $space-xs;
    margin: -$space-xs;
  }
}

.collection-filter {
  margin-bottom: $space-lg;
  
  &:last-child {
    margin-bottom: 0;
  }
  
  &__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: $space-sm;
  }
  
  &__title {
    margin: 0;
    font-size: $font-size-base;
    font-weight: 500;
  }
  
  &__toggle {
    background: none;
    border: none;
    color: $color-body-text;
    font-size: $font-size-base;
    padding: $space-xs;
    margin: -$space-xs;
    cursor: pointer;
    
    &[aria-expanded="false"] .icon-chevron-down {
      transform: rotate(-180deg);
    }
    
    .icon-chevron-down {
      transition: transform 0.3s ease;
    }
  }
  
  &__content {
    &[aria-hidden="true"] {
      display: none;
    }
  }
  
  &__list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  &__item {
    margin-bottom: $space-xs;
    
    &:last-child {
      margin-bottom: 0;
    }
    
    &.is-active .collection-filter__link {
      color: $color-primary;
      font-weight: 500;
    }
  }
  
  &__link {
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: $color-body-text;
    
    &:hover {
      color: $color-primary;
    }
  }
  
  &__count {
    font-size: $font-size-small;
    color: #777;
  }
  
  &__clear {
    margin-bottom: $space-sm;
    
    &-link {
      color: $color-primary;
      font-size: $font-size-small;
      
      &:hover {
        text-decoration: underline;
      }
    }
  }
}

.price-range {
  &__inputs {
    display: flex;
    align-items: center;
    margin-bottom: $space-sm;
  }
  
  &__field {
    flex: 1;
    
    &:first-child {
      margin-right: $space-xs;
    }
  }
  
  &__label {
    display: block;
    margin-bottom: $space-xs;
    font-size: $font-size-small;
  }
  
  &__input {
    width: 100%;
    height: 36px;
    padding: 0 $space-xs;
    border: 1px solid #ddd;
    border-radius: $border-radius-sm;
    -moz-appearance: textfield;
    
    &::-webkit-outer-spin-button,
    &::-webkit-inner-spin-button {
      -webkit-appearance: none;
      margin: 0;
    }
  }
}

.collection-toolbar {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin-bottom: $space-lg;
  padding-bottom: $space-md;
  border-bottom: 1px solid #ddd;
}

.collection-toolbar__item {
  margin-right: $space-md;
  margin-bottom: $space-sm;
  
  &:last-child {
    margin-right: 0;
  }
  
  &--count {
    margin-right: auto;
  }
  
  &--filters-toggle {
    @media (min-width: $breakpoint-lg) {
      display: none;
    }
  }
}

.collection-filters-toggle {
  display: flex;
  align-items: center;
  padding: $space-xs $space-sm;
  background-color: #f8f9fa;
  border: 1px solid #ddd;
  border-radius: $border-radius-md;
  font-size: $font-size-small;
  font-weight: 500;
  cursor: pointer;
  
  .icon-filter {
    margin-right: $space-xs;
  }
}

.collection-toolbar__count {
  font-size: $font-size-small;
  color: #777;
}

.collection-sort {
  display: flex;
  align-items: center;
  
  &__label {
    margin-right: $space-sm;
    font-size: $font-size-small;
  }
  
  &__select-wrapper {
    position: relative;
  }
  
  &__select {
    appearance: none;
    min-width: 200px;
    height: 36px;
    padding: 0 $space-md 0 $space-sm;
    border: 1px solid #ddd;
    border-radius: $border-radius-md;
    font-size: $font-size-small;
    background-color: #fff;
  }
  
  .icon-chevron-down {
    position: absolute;
    top: 50%;
    right: $space-sm;
    transform: translateY(-50%);
    pointer-events: none;
  }
}

.collection-view {
  display: flex;
  
  &__button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background: none;
    border: 1px solid #ddd;
    cursor: pointer;
    color: #777;
    
    &:first-child {
      border-top-left-radius: $border-radius-md;
      border-bottom-left-radius: $border-radius-md;
      border-right: none;
    }
    
    &:last-child {
      border-top-right-radius: $border-radius-md;
      border-bottom-right-radius: $border-radius-md;
    }
    
    &:hover {
      color: $color-primary;
    }
    
    &.is-active {
      background-color: $color-primary;
      border-color: $color-primary;
      color: #fff;
    }
  }
}

.collection-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: $space-md;
  
  @media (min-width: $breakpoint-sm) {
    grid-template-columns: repeat(2, 1fr);
  }
  
  @media (min-width: $breakpoint-lg) {
    grid-template-columns: repeat(3, 1fr);
  }
  
  &__item--1-4 {
    @media (min-width: $breakpoint-xl) {
      grid-column: span 1;
    }
  }
  
  &__item--1-3 {
    @media (min-width: $breakpoint-lg) {
      grid-column: span 1;
    }
  }
  
  &__item--1-2 {
    @media (min-width: $breakpoint-sm) {
      grid-column: span 1;
    }
  }
  
  &__item--1-1 {
    grid-column: 1 / -1;
    
    .product-card {
      &__inner {
        display: flex;
        align-items: center;
      }
      
      &__image-container {
        width: 200px;
        padding-bottom: 0;
        height: 200px;
        flex-shrink: 0;
      }
      
      &__info {
        flex: 1;
        padding: $space-md $space-lg;
      }
    }
  }
}

.collection-empty {
  text-align: center;
  padding: $space-xxl 0;
  
  &__title {
    margin-bottom: $space-md;
  }
  
  &__text {
    margin-bottom: $space-lg;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
}

.collection-pagination {
  grid-column: 1 / -1;
  margin-top: $space-xl;
}

